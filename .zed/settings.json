{
  "format_on_save": "on",
  "languages": {
    "TypeScript": {
      "formatter": "prettier"
    },
    "TSX": {
      "formatter": "prettier"
    },
    "JSON": {
      "formatter": "prettier"
    },
    "JSONC": {
      "formatter": "prettier"
    },
    "CSS": {
      "formatter": "prettier"
    },
    "Markdown": {
      "formatter": "prettier"
    },
    "TOML": {
      "formatter": "prettier",
      "format_on_save": "off"
    },
    "YAML": {
      "formatter": "prettier"
    }
  },
  "lsp": {
    "oxc": {
      "initialization_options": {
        "options": {
          "configPath": "frontend/.oxlintrc.json",
          "tsConfigPath": "frontend/tsconfig.json",
          "unusedDisableDirectives": "warn",
          "typeAware": false
        }
      }
    }
  }
}
